    <script>
        function connectUser() {
            const voucherCode = document.getElementById('voucherCode').value;
            
            if (!voucherCode) {
                alert('Please enter your voucher code');
                return;
            }
            
            // Simulate voucher validation
            if (voucherCode.length < 6) {
                alert('Invalid voucher code. Please check and try again.');
                return;
            }
            
            // Show success message
            alert(`Successfully connected with voucher: ${voucherCode}\nEnjoy your high-speed internet!`);
            
            // In a real implementation, this would redirect to the internet access
            // window.location.href = 'http://chapa-wifi-success';
        }
        
        // Add click event to plan cards
        document.querySelectorAll('.plan').forEach(plan => {
            plan.addEventListener('click', function() {
                const planName = this.querySelector('h3').textContent;
                const price = this.querySelector('.price').textContent;
                
                alert(`You selected: ${planName} (${price})\nPlease follow the instructions to make payment.`);
            });
        });
    </script>
